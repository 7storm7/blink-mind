{
  "compilerOptions": {
    "suppressExcessPropertyErrors": true,
    "downlevelIteration": true,
    "allowJs": true,
    "declaration": true,
    "outDir": ".",
    "target": "es5",
    "strictNullChecks": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["dom", "es2015"],
    "paths": {
      "@blink-mind/core": ["packages/core/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["stories/", "node_modules", "**/*.spec.ts", "./dist"]
}
